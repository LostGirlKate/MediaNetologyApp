<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_track_pleer"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play" />

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Talking to Myself"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn_track_pleer"
        app:layout_constraintStart_toEndOf="@+id/btn_track_pleer"
        app:layout_constraintTop_toTopOf="@+id/btn_track_pleer" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"
        tools:text="One More Light Live"
        app:layout_constraintBottom_toBottomOf="@+id/track_name"
        app:layout_constraintStart_toEndOf="@+id/track_name"
        app:layout_constraintTop_toTopOf="@+id/track_name" />

</androidx.constraintlayout.widget.ConstraintLayout>